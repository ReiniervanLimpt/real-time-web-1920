        <input id="blauw" type="radio" name="kleur" value="blauw">
        <label for="blauw">BLUE</label>
        <input id="rood" type="radio" name="kleur" value="rood">
        <label for="rood">RED</label>
        <input id="geel" type="radio" name="kleur" value="groen">
        <label for="geel">YELLOW</label>

        <legend aria-label="kleur van het shirt">LOGO OP HET SHIRT</legend>

        <input id="heart" type="radio" name="vorm" value="heart">
        <label id="morphheart" for="heart">HEART</label>
        <input id="bracket" type="radio" name="vorm" value="bracket">
        <label id="morphbracket" for="bracket">BRACKET</label>
        <input id="sword" type="radio" name="vorm" value="sword">
        <label id="morphsword" for="sword">SWORD</label>

        <legend aria-label="kleur van het shirt">MAAT</legend>

        <select name="maat">
          <option value="small">S</option>
          <option value="medium">M</option>
          <option value="large">L</option>
          <option value="extra-large">XL</option>
        </select>

        <input id="man" type="radio" name="geslacht" value="man">
        <label id="morphmale" for="man">MAN</label>
        <input id="vrouw" type="radio" name="geslacht" value="vrouw">
        <label id="morphfemale" for="vrouw">VROUW</label>

        <legend aria-label="sla shirt op">TEKST OP HET SHIRT</legend>
        <input id="shirtText" name="shirtTekst" type="text" maxlength="8" value="">

        <input type="submit" value="opslaan">



