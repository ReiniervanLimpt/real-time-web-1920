        <input id="perltwinkle" type="radio" name="kleur" value="perltwinkle">
        <label for="perltwinkle">PERLTWINKLE</label>
        <input id="green" type="radio" name="kleur" value="green">
        <label for="green">NERD GREEN</label>
        <input id="tealblue" type="radio" name="kleur" value="tealblue">
